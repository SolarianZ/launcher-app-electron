{
  "name": "launcher-app",
  "version": "1.0.0",
  "description": "快速访问常用文件、文件夹、URL和指令的工具",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "ZQY",
  "homepage": "https://github.com/SolarianZ/launcher-app-electron",
  "license": "MIT",
  "devDependencies": {
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.zqy.launcher-app",
    "productName": "Launcher App",
    "executableName": "launcher_app",
    "files": [
      "src/**/*",
      "package.json",
      "!src/assets/locales/**/*"
    ],
    "extraResources": [
      {
        "from": "src/assets/locales",
        "to": "app/src/assets/locales",
        "filter": [
          "*.json"
        ]
      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/icons/app-icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/assets/icons/app-icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/assets/icons/app-icon.ico",
      "category": "Utility"
    }
  }
}